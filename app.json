{
  "expo": {
    "name": "Bisaya Voice",
    "slug": "bisaya-voice",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FAFBFF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bisayavoice.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Bisaya Voice needs access to your microphone to convert your speech into text.",
        "NSSpeechRecognitionUsageDescription": "Bisaya Voice uses speech recognition to transcribe your speech into text."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FAFBFF"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.bisayavoice.app",
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Bisaya Voice needs access to your microphone to convert your speech into text.",
          "speechRecognitionPermission": "Bisaya Voice uses speech recognition to transcribe your speech into text."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "1a13f035-801b-4016-9afb-ba4ad7d2c9b3"
      }
    }
  }
}
